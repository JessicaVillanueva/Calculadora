<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="65dp" app:layout_constraintStart_toStartOf="parent" android:weightSum="8"
            tools:ignore="MissingConstraints">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="127dp" android:layout_weight="3">
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="83dp" android:id="@+id/txtResultado" android:textSize="36sp"
                    android:gravity="bottom|right" android:textColor="@android:color/white"
                    android:background="@color/darkGrey"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="69dp" android:layout_weight="1" android:weightSum="4">
            <Button
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnClean" android:layout_weight="1"
                    android:textColor="@android:color/white" android:background="@drawable/botones_operaciones_gris"
                    android:textSize="25sp"/>
            <Button
                    android:text="+/-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnSing" android:layout_weight="1"
                    android:textColor="@android:color/white" android:background="@drawable/botones_operaciones_gris"
                    android:textSize="25sp"/>
            <Button
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnPorcen" android:layout_weight="1"
                    android:textColor="@android:color/white" android:background="@drawable/botones_operaciones_gris"
                    android:textSize="25sp"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnDivi" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerSig"
                    android:background="@drawable/botones_operaciones" android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="74dp" android:layout_weight="1" android:weightSum="4">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn7" android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:onClick="obtenerNum" android:background="@drawable/borde_botones_numericos"
                    android:textSize="25sp"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn8" android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:onClick="obtenerNum" android:background="@drawable/borde_botones_numericos"
                    android:textSize="25sp"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn9" android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:onClick="obtenerNum" android:background="@drawable/borde_botones_numericos"
                    android:textSize="25sp"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnMulti" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerSig"
                    android:background="@drawable/botones_operaciones" android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="82dp" android:layout_weight="1" android:weightSum="4">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn4" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerNum"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn5" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerNum"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn6" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerNum"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnMinus" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerSig"
                    android:background="@drawable/botones_operaciones" android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="72dp" android:layout_weight="1" android:weightSum="4">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn1" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerNum"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn2" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerNum"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btn3" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerNum"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnSum" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="obtenerSig"
                    android:background="@drawable/botones_operaciones" android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="78dp" android:layout_weight="1" android:weightSum="4">
            <Button
                    android:text="0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/btn0" android:layout_weight="2"
                    android:textColor="@android:color/white" android:onClick="obtenerNum"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="."
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/btnPoint" android:layout_weight="1"
                    android:textColor="@android:color/white" android:onClick="punto"
                    android:background="@drawable/borde_botones_numericos" android:textSize="25sp"/>
            <Button
                    android:text="="
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/btnEquals" android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:background="@drawable/botones_operaciones" android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>